<style>

.fx_container
  {
  	max-width: 1600px;
    min-height: 800px;
    box-sizing: border-box;
    margin: 20px;
    width: 80%;
  }
  .blk_head h2
  {
	   	font-size: 28px;
    line-height: 42px;
    font-weight: 600;
  }
  .blk_text span
  {
	   	font-size: 18px;
    line-height: 28px;
    font-weight: 400;
  }
  .fx_blk_img
  {
    
  }
  
</style>
<div class="fx_container">
  
 {%for block in section.blocks %}
    {%- case block.type -%}
    {%- when 'text' -%}
  <div class="blk_head"> <h2> {{block.settings.heading1}} get the best</h2></div>
	{%- when 'textarea' -%}
  <div class="blk_text"> <span> {{block.settings.subtext}}</span></div>
  	{%- when 'image' -%}
  
  <div class="fx_blk_img"> <img src="{{ block.settings.image | image_url: 'master'}}" width="100%"; height="100%";></div>
  
  {%- endcase -%}
  
  {%endfor%}

</div>

{% schema %}
  {

  "name": "headntext",
  "blocks": [
    {
      "type": "text",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading1",
          "default": "Heading",
          "label": "myheading"
        }
      ]
    }, 
    {
      "type": "textarea",
      "name": "simple text",
      "settings": [
        
        {
          "type": "richtext",
          "id": "subtext",
          "default": "<p>Share store details, promotions, or brand content with your customers.</p>",
          "label": "mytext"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
   
      ]
    }
  ],

  "settings": [],
  
 "presets": [
    {
      "name": "headntext",
      "blocks": [
        
      ]
    }
  ]

}
{% endschema %}